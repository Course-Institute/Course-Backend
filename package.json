{
  "name": "mivpsa-backend",
  "version": "1.0.0",
  "type": "module",
  "main": "./src/app.ts",
  "scripts": {
    "build": "tsc",
    "start": "tsx src/app.ts",
    "dev": "tsx watch src/app.ts",
    "dev:watch": "concurrently \"tsc --watch\" \"nodemon --exec tsx src/app.ts\"",
    "prod": "npm run build && node dist/app.js",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "test": "tsx src/test/role-based-login.test.ts",
    "test:admin": "tsx src/test/admin-login.test.ts",
    "demo:admin": "tsx src/test/admin-login-demo.ts"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/multer": "^2.0.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.2",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.5.2",
    "@types/supertest": "^6.0.2",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "rimraf": "^5.0.5",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  }
}
